<h2 class="sessions_header">Sign Up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <%= f.hidden_field :avatar %>

  <a href="#" data-toggle="tooltip" title="Click to change your avatar." data-toggle="modal" data-target="#avatar-picker-modal" class="darken edit-avatar-tooltip">
    <%= image_tag resource.avatar, class: "avatar avatar-medium" %>
  </a>
  <a href="#" data-toggle="modal" data-target="#avatar-picker-modal" class="edit-avatar-tooltip">Add an avatar</a>


  <div>
    <%= f.text_field :name, placeholder: "Name", class: "sessions_form_field" %></div>

  <div>
  <%= f.email_field :email, placeholder: "Email Address", class: "sessions_form_field" %></div>

  <div>
    <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "sessions_form_field" %></div>

  <div>
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password", class: "sessions_form_field" %></div>

  <div><%= f.submit "Sign up", class: "sessions_submit_button btn btn-info" %></div>
<% end %>

<%= render partial: 'avatar_picker_modal' %>


<script type="text/javascript" charset="utf-8">
  new window.AvatarPicker($("#avatar-picker-modal"), $("#user_avatar"), $(".avatar-medium"))
</script>
