<h2 class="new_user_signup_header">Sign Up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div>
    <%= f.text_field :name, placeholder: "Name", class: "new_user_form_field" %></div>

  <div>
  <%= f.email_field :email, placeholder: "Email Address", class: "new_user_form_field" %></div>

  <div>
    <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "new_user_form_field" %></div>

  <div>
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password", class: "new_user_form_field" %></div>

  <div><%= f.submit "Sign up", class: "new_user_signup_button btn btn-info" %></div>
<% end %>


