<h1>Plan a Roster</h1>

<%= @planned_roster_group.errors.full_messages if @planned_roster_group.errors.present? %>

<%= form_for @planned_roster_group do |f| %>
  <div id="month-select"></div>
  <%= f.submit "Continue", class: "btn btn-large btn-primary" %>
<% end %>

<script type="text/javascript">
  React.renderComponent(WorshipTeamCenter.MonthSelect({timestamp: "<%= @planned_roster_group.month %>"}), document.getElementById("month-select"));
</script>
