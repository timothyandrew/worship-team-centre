<% content_for :container_class do  %>
    table-container
<% end %>

<% if @song_lists.empty? %>
  <h1>You haven't added any worship sets yet. <%= link_to "Create a Worship Set", new_song_list_path %></h1>
<% else %>
	<table class="table table-striped table-hover table-bordered table-responsive">
		<tr>
			<th>Worship Sets</th>
			<th>Done On</th>
			<th>Theme</th>
			<th>Leader</th>
			<th>Services</th>
			<th>Actions</th>
		</tr>
    <% @song_lists.each do |song_list| %>
    	<tr>
    		<td>
    			<ul>
    				<% song_list.songs.not_deleted.each do |song| %>
    					<li>
    					 	<%= link_to song.name, song_path(song) %>
    					</li>
    				<% end %>
    			</ul>
    		</td>
        	<td><%= l(song_list.done_on, format: :long) %></td>
        	<td><%= simple_format(word_wrap(song_list.theme, line_width: 40)) %></td>
        	<td><%= song_list.leader ? song_list.leader.name : link_to("No leader set", edit_song_list_path(song_list)) %></td>
        	<td><%= song_list.service %></td>
        	<td>
            <%= link_to "Edit", edit_song_list_path(song_list), class: "btn" %>
            <%= link_to "Delete", song_list_path(song_list),  method: :delete, class: "btn btn-warning delete-song-list-button", confirm: "Are you sure you want to delete this worship set?" %>
            </td>
        </tr>
    <% end %>
    </table>
<% end %>
